{% extends "layout/layout.html.twig" %}

{% block title %}Read post "{{  article.title|escape }}"{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <h4 class="text-center article-title">{{ article.title }}</h4>
        <div class="col-sm-6 col-xs-12">
            <h6>Author</h6>
            <p class="post-details">{{ article.author }}</p>
        </div>
        <div class="col-sm-6 col-xs-12 text-right">
            <h6>Publishing date</h6>
            <p class="post-details">{{ article.publish_at | date('Y. m. d. H:i') }}</p>
        </div>
        <hr />
        <div class="col-xs-12">
            <h4>{{ article.short_content }}</h4>
            <p class="text-center"><img src="/uploads/news/{{ article.id }}/{{ article.image }}" class="article-image" alt="Article image" /></p>
        </div>
        <div class="col-xs-12">
            {% for contentLine in (article.content | split("\n")) %}
                <p>{{ contentLine }}</p>
            {% endfor %}
        </div>
        <div class="col-xs-12 text-center">
            <a href="/news/index.php" class="btn btn-primary article-show-button">
                Back to index
            </a>
        </div>
    </div>
</div>
{% endblock %}